<div class="row mb-3 border shadow-sm rounded">
  <div class="col-2 d-flex align-items-center justify-content-start">
    <img src="@ViewData["imgUrl"]" alt="@ViewData["name"] thumbnail" style="max-height: 7em">
  </div>
  <div class="col-5 d-flex align-items-center flex-column">

    <span class="fs-5">@ViewData["name"]</span>

    <p>@ViewData["itemCount"]</p>

  </div>
  <div class="col-3 d-flex align-items-center justify-content-center">
    <div class="">
      <button type="button" class="btn btn-light border btn-small py-1 px-2"><i class="fas fa-minus"></i></button>
      <u class="mx-3">@ViewData["quantity"]</u>
      <button type="button" class="btn btn-primary btn-small py-1 px-2"><i class="fas fa-plus"></i></button>
    </div>
  </div>
  <div class="col-2 d-flex align-items-end justify-content-center flex-column">
    @* <button type="button" class="btn btn-outline-danger btn-sm btn-floating mt-1 mb-2">
      <i class="fas fa-trash"></i>
      </button> *@
    <span class="fs-5">$@ViewData["itemPrice"]</span>
  </div>
</div>
