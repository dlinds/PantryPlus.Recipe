<!-- Second modal dialog -->
<div class="modal fade" id="ingredientModal" aria-hidden="true" aria-labelledby="ingredientModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered" style="min-width: 85vw;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ingredientModalTitle">Add Banana to your cart</h5>
        <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body mx-2 pb-0 bg-light">
        <div class="text-center">
          @if (ViewBag.KrogerStoreName == null)
          {
            <h4 class="text-danger">Heads up!</h4>
            <p>It doesn't look like you've yet selected a Kroger store. Until you do, all prices will come back as unknown, and adding to your pantry will not work.
              <br /> <br /> To pick a store, navigate to the Account Info page, located in the right side of the site's menu bar.
            </p>
          }
          else
          {
            <h4>Searching @ViewBag.KrogerStoreName</h4>
          }
          <div>
            <div class="text-center d-none">
              <button type="button" id="searchIngredientButton" class="btn btn-primary my-3 w-25">Search</button>
            </div>
            <div id="searchIngredientResults">
            </div>
          </div>
        </div>
        <nav aria-label="Page navigation example" class="mt-3" id="pagination">
          <ul class="pagination justify-content-center pagination-circle" id="paginationUL">

          </ul>
        </nav>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" data-mdb-target="#ingredientModal" data-mdb-toggle="modal">
          Back
        </button>
      </div>
    </div>
  </div>
</div>
